<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookActivity">

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00FFFFFF"
        android:drawableTint="#FF9100"
        android:text="btn"
        android:textColor="#00FF9100"
        android:textColorHighlight="#FF9100"
        android:textColorLink="#FF9100"
        app:icon="@drawable/arrow"
        app:iconSize="30dp"
        app:iconTint="#FF9100" />

    <ImageView
        android:id="@+id/book_info_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cover" />
    <TextView
        android:id="@+id/book_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_borrow"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:backgroundTint="#FF9100"
        android:fontFamily="@font/inter"
        android:shadowColor="#6DFF9100"
        android:shadowRadius="5"
        android:text="Одолжить"
        android:textAlignment="gravity"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF9100"
        android:fontFamily="@font/inter"
        android:shadowColor="#6DFF9100"
        android:shadowRadius="5"
        android:text="Редактировать"
        android:textAlignment="gravity"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/delete_book_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Удалить книгу"
        android:textAlignment="center"
        android:textColor="#FF3D00" />

</LinearLayout>