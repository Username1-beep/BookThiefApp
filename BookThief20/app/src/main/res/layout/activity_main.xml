<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/logo_o" />

    <TextView
        android:id="@+id/header_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/play_bold"
        android:text="Создайте аккаунт"
        android:textAlignment="center"
        android:textColor="#FF9239"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_login"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FE9139"
        android:ems="10"
        android:textColor="#FF9100"
        android:fontFamily="@font/inter"
        android:hint="Введите логин*"
        android:inputType="text"
        android:textColorHint="#ABFE9139" />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FE9139"
        android:ems="10"
        android:textColor="#FF9100"
        android:fontFamily="@font/inter"
        android:hint="Введите почту*"
        android:inputType="textEmailAddress"
        android:textColorHint="#ABFE9139" />

    <EditText
        android:id="@+id/user_pass"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FE9139"
        android:ems="10"
        android:textColor="#FF9100"
        android:fontFamily="@font/inter"
        android:hint="Введите пароль*"
        android:inputType="textPassword"
        android:textColorHint="#ABFE9139" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FF9100"
        android:fontFamily="@font/inter"
        android:shadowColor="#6DFF9100"
        android:shadowRadius="5"
        android:text="Регистрация"
        android:textAlignment="gravity"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/play"
        android:text="Уже есть аккаунт?"
        android:textAlignment="center"
        android:textColor="#FF9100"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/link_to_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/play"
        android:text="Войти"
        android:textAlignment="center"
        android:textColor="#FF9100"
        android:textSize="17dp" />

</LinearLayout>